{
  "name": "blockchain-school",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "yarn clean && yarn compile",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "lint-ts": "eslint \"deploy/*.{js,ts}\" --quiet --fix",
    "lint-sol": "solhint \"contracts/**/*.sol\"",
    "format-ts": "prettier -w \"**/*.{ts, js, yml, json}\"",
    "format-deploy-ts": "prettier -w \"deploy/*.{ts, js, yml, json}\"",
    "format-sol": "prettier -w \"contracts/**/*.sol\"",
    "fix-ts": "yarn lint-ts && yarn format-ts",
    "fix-sol": "yarn lint-sol && yarn format-sol",
    "fix": "yarn fix-ts && yarn fix-sol"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.6",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@typechain/ethers-v4": "^7.0.0",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.3.1",
    "@types/jest": "^28.1.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.44",
    "chai": "^4.3.6",
    "ethereum-waffle": "^3.4.4",
    "ethers": "^5.6.8",
    "hardhat": "^2.9.6",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-typechain": "^0.3.5",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.0",
    "typechain": "^8.0.0",
    "typescript": "^4.7.2"
  },
  "directories": {
    "test": "test"
  },
  "keywords": [],
  "author": "",
  "description": ""
}
